{
  "name": "gaboesquivel.com",
  "version": "1.0.0",
  "description": "Gabo Esquivel personal website",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js && npm run build:img",
    "minify": "parallelshell 'npm run minify:css' 'npm run minify:js'",
    "watch": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run watch:img'",
    "start": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run watch:img' 'hugo server -D'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "hugo -d public/ && gh-pages-deploy",
    "predeploy": "npm run build && npm run minify",
    "prestart": "npm run build",
    "prebuild:css": "node-sass src/css/ -o static/css",
    "build:css": "postcss --use autoprefixer -b 'last 2 versions' < static/css/styles.css -o static/css/styles.css",
    "build:js": "browserify src/js/index.js -o static/js/bundle.js",
    "build:img": "gulp optimize-images",
    "minify:js": "uglifyjs static/js/bundle.js -c -o static/js/bundle.js",
    "minify:css": "cleancss static/css/styles.css -o static/css/styles.css",
    "prewatch": "npm run build",
    "watch:css": "onchange './src/css/' -- npm run build:css",
    "watch:js": "onchange './src/js/' -- npm run build:js",
    "watch:img": "onchange './src/img/' -- npm run build:img"
  },
  "gh-pages-deploy": {
   "staticpath": "public",
   "cname": "gaboesquivel.com",
   "noprompt": false
 },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaboesquivel/gaboesquivel.github.io.git"
  },
  "author": "@gaboesquivel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gaboesquivel/gaboesquivel.github.io/issues"
  },
  "homepage": "https://github.com/gaboesquivel/gaboesquivel.github.io#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "browserify": "^14.4.0",
    "clean-css-cli": "^4.1.6",
    "gh-pages-deploy": "^0.4.2",
    "gulp": "^3.9.1",
    "gulp-cache": "^0.4.6",
    "gulp-cli": "^1.4.0",
    "gulp-imagemin": "^3.3.0",
    "gulp-load-plugins": "^1.5.0",
    "imagemin-cli": "^3.0.0",
    "imageoptim-cli": "^1.15.1",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "postcss": "^6.0.8",
    "uglify-es": "^3.0.27"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^2.1.4",
    "magnific-popup": "^1.1.0",
    "mixitup": "^3.2.1",
    "owl.carousel": "^2.2.0",
    "postcss-cli": "^4.1.0",
    "scrollspy": "^1.6.0",
    "wowjs": "^1.1.3"
  }
}
